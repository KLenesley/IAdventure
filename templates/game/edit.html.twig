{% extends 'base.html.twig' %}

{% block title %}Éditer {{ game.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Éditer {{ game.title }}</h1>

    {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
        {{ form_row(form.title) }}
        {{ form_row(form.welcomeMsg) }}
        {{ form_row(form.welcomeImg) }}
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{ path('app_game_show', {'id': game.id}) }}" class="btn btn-secondary">Annuler</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
