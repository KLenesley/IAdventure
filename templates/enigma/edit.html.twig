{% extends 'base.html.twig' %}

{% block title %}Éditer énigme - {{ game.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Éditer l'énigme "{{ enigma.title }}"</h1>

    {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
        {{ form_row(form.title) }}
        {{ form_row(form.instruction) }}
        {{ form_row(form.secretCode) }}
        {{ form_row(form.order) }}
        {{ form_row(form.type) }}
        
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{ path('app_enigma_index', {'gameId': game.id}) }}" class="btn btn-secondary">Annuler</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
