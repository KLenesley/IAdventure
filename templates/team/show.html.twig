{% extends 'base.html.twig' %}

{% block title %}Équipe {{ team.username }}{% endblock %}

{% block body %}
    {% set game = team.game %}

    <main class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6">
                <div class="landing-card">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h1 class="h3 mb-2">Équipe {{ team.username }}</h1>
                            {% if game %}
                                {% if game.isFinished() %}
                                    <span class="badge text-bg-success">Partie terminée</span>
                                {% else %}
                                    <span class="badge text-bg-warning text-dark">Partie en cours</span>
                                {% endif %}
                            {% else %}
                                <span class="badge text-bg-secondary">Partie non démarrée</span>
                            {% endif %}
                        </div>
                        <div class="text-end small landing-muted">
                            Créée le<br>
                            {{ team.creationDate ? team.creationDate|date('d/m/Y H:i') : '—' }}
                        </div>
                    </div>

                    <dl class="row g-3 mb-0">
                        <dt class="col-5 text-white-50 text-uppercase small">Nom de l'équipe</dt>
                        <dd class="col-7 mb-0 fw-semibold">{{ team.username }}</dd>

                        <dt class="col-5 text-white-50 text-uppercase small">Début de la partie</dt>
                        <dd class="col-7 mb-0">{{ game ? game.startDate|date('d/m/Y H:i') : '—' }}</dd>

                        <dt class="col-5 text-white-50 text-uppercase small">Fin de la partie</dt>
                        <dd class="col-7 mb-0">{{ game and game.endDate ? game.endDate|date('d/m/Y H:i') : '—' }}</dd>

                        <dt class="col-5 text-white-50 text-uppercase small">État actuel</dt>
                        <dd class="col-7 mb-0">
                            {% if game %}
                                {% if game.isFinished() %}
                                    Partie terminée
                                {% else %}
                                    Partie en cours
                                {% endif %}
                            {% else %}
                                Non démarrée
                            {% endif %}
                        </dd>
                    </dl>

                    <div class="mt-4 d-flex flex-column flex-sm-row gap-2 justify-content-between align-items-center">
                        <a class="link-light text-decoration-none" href="{{ path('app_team_index') }}">← Retour aux équipes</a>
                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-primary" href="{{ path('app_team_edit', {'id': team.id}) }}">Modifier</a>
                            {{ include('team/_delete_form.html.twig', {'button_class': 'btn btn-outline-danger'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
