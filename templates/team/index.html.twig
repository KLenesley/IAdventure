{% extends 'base.html.twig' %}

{% block title %}Gestion des équipes{% endblock %}

{% block body %}
    <main class="container py-5">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
            <div>
                <h1 class="h2 mb-2">Gestion des équipes</h1>
                <p class="landing-muted mb-0">Surveillez la progression des parties et accédez rapidement aux actions clés.</p>
            </div>
            <a class="btn btn-primary btn-lg" href="{{ path('app_team_new') }}">Créer une équipe</a>
        </div>

        {% if teams is not empty %}
            <div class="landing-card p-0 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="text-uppercase small">
                            <tr class="text-white-50">
                                <th scope="col">Équipe</th>
                                <th scope="col">État du jeu</th>
                                <th scope="col">Début</th>
                                <th scope="col">Créée le</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for team in teams %}
                            {% set game = team.game %}
                            <tr>
                                <td class="fw-semibold">{{ team.username }}</td>
                                <td>
                                    {% if game %}
                                        {% if game.isFinished() %}
                                            <span class="badge text-bg-success">Terminée</span>
                                        {% else %}
                                            <span class="badge text-bg-warning text-dark">En cours</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="badge text-bg-secondary">Non démarrée</span>
                                    {% endif %}
                                </td>
                                <td>{{ game ? game.startDate|date('d/m/Y H:i') : '—' }}</td>
                                <td>{{ team.creationDate ? team.creationDate|date('d/m/Y H:i') : '—' }}</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a class="btn btn-outline-light" href="{{ path('app_team_show', {'id': team.id}) }}">Voir</a>
                                        <a class="btn btn-outline-primary" href="{{ path('app_team_edit', {'id': team.id}) }}">Modifier</a>
                                    </div>
                                    {{ include('team/_delete_form.html.twig', {
                                        team: team,
                                        button_class: 'btn btn-outline-danger btn-sm ms-2'
                                    }) }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% else %}
            <div class="landing-card text-center">
                <h2 class="h4 mb-2">Aucune équipe enregistrée</h2>
                <p class="landing-muted mb-4">Créez votre première équipe pour commencer une aventure collective.</p>
                <a class="btn btn-primary" href="{{ path('app_team_new') }}">Créer une équipe</a>
            </div>
        {% endif %}
    </main>
{% endblock %}
