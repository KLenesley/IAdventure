{% extends 'base.html.twig' %}

{% block title %}Modifier l'équipe{% endblock %}

{% block body %}
    <main class="container py-5">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6">
                <div class="landing-card">
                    <h1 class="h3 mb-3">Modifier l'équipe</h1>
                    <p class="landing-muted mb-4">Ajustez les informations de connexion de votre équipe ou mettez à jour son identifiant.</p>

                    {{ include('team/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}

                    <div class="mt-4 d-flex flex-column flex-sm-row gap-2 justify-content-between align-items-center">
                        <a class="link-light text-decoration-none" href="{{ path('app_team_index') }}">← Retour aux équipes</a>
                        {{ include('team/_delete_form.html.twig', {'button_class': 'btn btn-outline-danger'}) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
